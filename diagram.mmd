    class Person {
        +Long id
        +String firstName
        +String lastName
        +String email
        +String phoneNumber
        +String address
        +PersonRole personRole
    }

    class PersonRole {
        CUSTOMER
        CONSULTANT
    }

    class Order {
        +Long id
        +String fromAddress
        +String toAddress
        +ServiceType serviceType
        +LocalDate startDate
        +LocalDate endDate
        +String note
        +OrderStatus status
        +Person person
    }

    class ServiceType {
        MOVING
        PACKING
        CLEANING
    }

    class OrderStatus {
        PENDING
        IN_PROGRESS
        COMPLETED
        CANCELLED
    }

